extends ../layout

block content 
    h1 Partidos 
        table
            thead 
                th Nombre partido
                th Fecha hora partido 
                th idstadium
                th idtournament
            tbody 
                each game in games 
                    tr
                        td= game .name 
                        td= game.datetime 
                        td= game.idstadium 
                        td= game.idtournament 
                        if game.team 
                            td=game.team.name
                        else
                            td Sin partido 
