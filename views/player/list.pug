extends ../layout

block content 
    link(rel="stylesheet", href="/style.css")
    h1 Jugadores
        table(class="table table.striped", id="players")
            thead 
                th Nombre 
                th Apellido 
                th Edad 
                th Equipo 
            tbody 
                each player in players 
                    tr
                        td= player.name 
                        td= player.last_name 
                        td= player.age 
                        if player.team 
                            td=player.team.name
                        else
                            td Sin equipo 
                        td 
                            form(action=`/players/player/delete/${player.idplayer}`, method="post")
                                input(type="hidden", name="password", value="mi-contrase√±a")
                                input(type="submit", value="Eliminar")
        a(href="/players/new")
            button Crear un jugador 